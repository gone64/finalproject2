<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:text="Create Account"
        android:fontFamily="@font/alata"
        android:textColor="#598bbd"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/up_mail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/costom_input"
        android:drawableStart="@drawable/costom_email_icon"
        android:drawablePadding="12sp"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        app:layout_constraintStart_toStartOf="@+id/txt"
        app:layout_constraintTop_toBottomOf="@id/txt" />

    <EditText
        android:id="@+id/up_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/costom_lock_icon"
        android:drawablePadding="12sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:background="@drawable/costom_input"
        app:layout_constraintStart_toStartOf="@+id/up_mail"
        app:layout_constraintTop_toBottomOf="@id/up_mail" />

    <EditText
        android:id="@+id/up_number"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="Enter Phone Number"
        android:inputType="number"
        android:drawableStart="@drawable/costom_phone_icon"
        android:drawablePadding="12sp"
        android:paddingStart="12sp"
        android:paddingEnd="12sp"
        android:background="@drawable/costom_input"
        app:layout_constraintStart_toStartOf="@+id/up_pass"
        app:layout_constraintTop_toBottomOf="@id/up_pass" />


    <TextView
        android:id="@+id/up_sgnup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/btn_bg"
        android:paddingHorizontal="25sp"
        android:paddingVertical="10sp"
        app:layout_constraintEnd_toEndOf="@+id/up_number"
        app:layout_constraintTop_toBottomOf="@+id/up_number" />

    <TextView
        android:id="@+id/up_sgnin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Sign in"
        android:textColor="#83a7cc"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="50dp"
        android:text="Already have a account?"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>